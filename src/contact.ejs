<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= htmlWebpackPlugin.options.title%></title>
  </head>

  <body>
    <div class="container">
      <header class="header">
        <nav>
          <ul class="menu-items" id="tabs">
            <li class="menu-btn hov-style" data-name="index">
              <a aria-label="Home Page" href="../dist/index.html">Home</a>
            </li>

            <div
              class="dropdown-div menu-btn gal-hov dropdown-btn"
              data-name="galleries"
              title="Galleries"
            >
              <div class="gal-btn-div">
                <li aria-label="Click to Open Submenu">
                  <a href="#galleries">Galleries</a>
                </li>

                <div class="gal-arrow"></div>
              </div>

              <ul class="dropdown-content">
                <li
                  class="dropdown-item birds"
                  style="--delay: 1"
                  data-name="birds-gallery"
                  aria-label="Click to Visit Gallery"
                >
                  <a href="../dist/birds-gallery.html">Birds</a>
                </li>
                <li
                  class="dropdown-item insects"
                  style="--delay: 2"
                  data-name="insects-gallery"
                  aria-label="Click to Visit Gallery"
                >
                  <a href="../dist/insects-gallery.html">Insects</a>
                </li>
                <li
                  class="dropdown-item small-animals"
                  style="--delay: 3"
                  data-name="small-animals-gallery"
                  aria-label="Click to Visit Gallery"
                >
                  <a href="../dist/small-animals-gallery.html">Small Animals</a>
                </li>
              </ul>
            </div>

            <li class="menu-btn hov-style" data-name="about">
              <a aria-label="About Page" href="../dist/about.html">About</a>
            </li>

            <li class="menu-btn hov-style" data-name="contact">
              <a
                aria-label="Contact Page"
                aria-current="page"
                href="../dist/contact.html"
                >Contact</a
              >
            </li>
          </ul>
        </nav>
      </header>

      <main class="main">
        <!-- CONTACT -->
        <section class="tab-content contact-tab" id="contact">
          <form action="#" method="POST">
            <fieldset>
              <h1 class="contact-header">Get In Touch!</h1>
              <p class="required-text">
                Required fields are followed by
                <span aria-label="required">*</span>
              </p>

              <label for="name">
                <div class="input-type">
                  Name: <span aria-label="required">*</span>
                </div>
                <div class="input-box">
                  <input
                    id="name"
                    type="text"
                    name="name"
                    placeholder="This form is not yet active."
                    required
                  />
                </div>
              </label>

              <label for="email">
                <div class="input-type">
                  Email: <span aria-label="required">*</span>
                </div>
                <div class="input-box">
                  <input
                    id="email"
                    type="email"
                    name="email"
                    placeholder="youremail@email.com"
                    required
                  />
                </div>
              </label>

              <label for="message">
                <div class="input-type">
                  Message: <span aria-label="required">*</span>
                </div>
                <div class="input-box">
                  <textarea
                    name="message"
                    id="message"
                    rows="15"
                    cols="50"
                    placeholder="This form is not yet active."
                    required
                  ></textarea>
                </div>
              </label>

              <button class="send-contact" type="button">Submit</button>
            </fieldset>
          </form>
        </section>
      </main>

      <footer class="footer-div">
        <div class="footer">
          <div class="copyright-div">
            <p class="my-copyright">Jenn Guneratne Â© 2024</p>
          </div>

          <div class="logo-div">
            <a
              href="https://github.com/jguneratne/photo-gallery"
              target="_blank"
              rel="noopener noreferrer"
            >
              <img
                src="<%=require('../src/assets/imgs/github-mark-white.svg') %>"
                alt="Octocat GitHub Logo"
                class="github-logo"
              />
            </a>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
